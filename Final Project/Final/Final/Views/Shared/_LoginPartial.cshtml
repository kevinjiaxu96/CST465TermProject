@using Microsoft.AspNetCore.Identity
@using Final.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        @Html.AntiForgeryToken()
        <div class="navbar-collapse justify-content-between" id="navbarNavAltMarkup">
            <a class="nav-item nav-link active" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            <button type="submit" class="btn btn-link navbar-btn navbar-link nav-item">Log out</button>
        </div>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Login" class="nav-item">Log in</a></li>
    </ul>
}