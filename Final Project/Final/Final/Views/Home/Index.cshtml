@model RegisterViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="home-content d-flex justify-content-center align-items-center">
    <form class="signup-form d-flex align-items-center" asp-controller="Home" asp-action="Index" method="POST">
        @Html.AntiForgeryToken()
        <div class="first-box">
            <div class="card signup-description" style="width: 18rem;">
                <div class="card-body">
                    <h3 class="card-title">Sign Up</h3>
                    <p class="card-text">
                        Sign up now to enjoy this application that deserves a good grade for a final project.
                    </p>
                    <a asp-controller="Account" asp-action="Login" class="card-link">already have an account?</a>
                </div>
            </div>
        </div>
        <div class="second-box">
            <div class="card signup-box">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control m-form-input" />
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control m-form-input" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control m-form-input" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control m-form-input" />
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>
    </form>
</div>
<footer class="home-footer d-flex justify-content-center align-items-center">
    <ul class="list-unstyled d-flex footerlist">
        <li><a href="https://github.com/kevinjiaxu96/CST465TermProject" target="_blank" class="f-links"><i id="github-icon" class="fab fa-github"></i></a></li>
    </ul>
</footer>